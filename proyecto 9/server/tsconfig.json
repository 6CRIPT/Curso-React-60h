{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "esnext"
        ],
        "target": "ESNext", // esto es para guardar en la base de datos (en product)
        "moduleResolution": "NodeNext", // esto es para guardar en la base de datos (en product)
        "module": "NodeNext", // esto es para guardar en la base de datos (en product)
        "strict": false, // TS types
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true, //TS?
        "experimentalDecorators": true, //para los decoradores
        "emitDecoratorMetadata": true //para los decoradores
    },
    "include": [
        "src/**/*.ts"
    ]
}